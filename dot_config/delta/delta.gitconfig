# vim: set ft=gitconfig:

[core]
  pager = delta 

[interactive]
  diffFilter = delta --color-only

[delta]
  features = mellow-barbet
  dark = true
  navigate = true
  hyperlinks = true
  side-by-side = true
  syntax-theme = tokyonight_night

[diff]
  colorMoved = default

[merge]
  conflictStyle = zdiff3

[include]
  path = ~/.config/delta/themes.gitconfig
